{{!-- signup form with username, password, sign up button, log in instead button --}}
<form class="signup-form">
    <div>
        <header>
            <h3 class="text-dark d-block mb-4">Signup</h3>
        </header>
        <div class="mb-3">
            <label class="form-label">Create Username</label>
            <input class="form-control" type="text" id="username-signup" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Create Password</label>
            <input class="form-control" type="password" id="password-signup" minlength="8" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input class="form-control" type="password" id="password-confirm" minlength="8" required>
            <p class="invalid-signup text-white bg-danger mt-2 w-50"></p>
        </div>



        <button type="submit" class="btn btn-success">Signup!</button>
        <a class="btn btn-primary" href="/login">Login Instead</a>        
    </div>
</form>

<script src="./js/signup.js"></script>