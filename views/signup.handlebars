{{!-- signup form with username, password, sign up button, log in instead button --}}
<form class="signup-form">
    <div>
        <header>
            <h3 class="text-dark d-block mb-4">Signup</h3>
        </header>
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input class="form-control" type="text" id="username-signup" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input class="form-control" type="password" id="password-signup" minlength="8" required>
        </div>

        <button type="submit" class="btn btn-primary">Signup!</button>
        <a class="text-danger" href="/login">Login Instead</a>        
    </div>
</form>

<script src="./js/signup.js"></script>