{{!-- Login form with username, password, login button, sign up instead button --}}
<form class="login-form">
    <div>
        <header>
            <h3 class="text-dark d-block mb-4">Login</h3>
        </header>
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" id="username-login" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password-login" required>
            <p class="invalid-login text-white bg-danger mt-2 text-center"></p>
        </div>

        <button type="submit" class="btn btn-primary">Login!</button>
        <a class="btn btn-success" href="/signup">Signup</a>        
    </div>
</form>

<script src="./js/login.js"></script>